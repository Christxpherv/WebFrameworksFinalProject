
<%# create a table of the products and it's categories, like an actual database  %>
<table>
  <thead>
    <tr>
         <%# categories/columns %>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th> 
    </tr>
  </thead>
  <tbody>
    <%# iterate through the data in products and get its attributes to create a row %>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= category.status ? true : false %></td>
      </tr>
    <% end %>
  </tbody>
</table>